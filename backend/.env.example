# MongoDB Connection String
# For local MongoDB:
MONGO_URI=mongodb://localhost:27017/resiliencehub
# For MongoDB Atlas (cloud):
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/resiliencehub

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Secret - Change this to a random string!
# Generate random string: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_random_string_change_this_now

# JWT Expiration (how long login tokens last)
JWT_EXPIRE=7d

# Redis Configuration (for Bull queue background jobs)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# Mapbox API Key (get free key from mapbox.com)
MAPBOX_API_KEY=your_mapbox_api_key_here

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Sync Configuration
SYNC_BATCH_SIZE=100
AUTO_SYNC_INTERVAL=300000